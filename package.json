{
  "name": "reqquli",
  "version": "1.0.0",
  "description": "Requirement management software for regulatory compliance purposes",
  "main": "dist/server/server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "server:dev": "tsx watch src/server/server.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "client:dev": "vite",
    "client:build": "vite build",
    "start": "node dist/server/server/server.js",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test:api": "jest tests/*.test.ts --forceExit",
    "test:api:watch": "jest --watch tests/*.test.ts",
    "test:api:coverage": "jest --coverage tests/*.test.ts --forceExit",
    "test:e2e": "playwright test --grep-invert=\\.smoke\\.",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test e2e/smoke-test-traceability.smoke.ts --workers=1",
    "prepare": "husky",
    "deploy:build": "rm -rf dist node_modules && rm -f deploy.zip && npm ci && npm run build && rm -rf node_modules && npm ci --omit=dev --ignore-scripts && zip -r deploy.zip dist node_modules package*.json scripts/*.sql .deployment"
  },
  "dependencies": {
    "@types/cookie-parser": "1.4.10",
    "@types/multer": "2.0.0",
    "bcrypt": "6.0.0",
    "clsx": "2.1.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-rate-limit": "8.2.1",
    "express-validator": "7.3.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "multer": "2.0.2",
    "pg": "8.16.3",
    "sanitize-filename": "1.6.3",
    "tailwind-merge": "3.3.1",
    "uuid": "13.0.0",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@playwright/test": "1.56.1",
    "@tailwindcss/postcss": "4.1.16",
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/d3": "7.4.3",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.10.0",
    "@types/pg": "8.15.6",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/react-router-dom": "5.3.3",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@vitejs/plugin-react": "5.1.0",
    "autoprefixer": "10.4.21",
    "axios": "1.13.2",
    "concurrently": "9.2.1",
    "d3": "7.9.0",
    "eslint": "9.39.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.6",
    "lucide-react": "0.552.0",
    "nodemon": "3.1.10",
    "playwright-lighthouse": "4.0.0",
    "postcss": "8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "7.9.5",
    "supertest": "7.1.4",
    "tailwindcss": "4.1.16",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.2.1",
    "wait-on": "9.0.1",
    "zustand": "5.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run typecheck'"
    ]
  }
}
