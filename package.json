{
  "name": "reqquli",
  "version": "1.0.0",
  "description": "Requirement management software for regulatory compliance purposes",
  "main": "dist/server/server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "server:dev": "tsx watch src/server/server.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "client:dev": "vite",
    "client:build": "vite build",
    "start": "node dist/server/server/server.js",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test:api": "jest tests/*.test.ts --forceExit",
    "test:api:watch": "jest --watch tests/*.test.ts",
    "test:api:coverage": "jest --coverage tests/*.test.ts --forceExit",
    "test:e2e": "playwright test --grep-invert=\\.smoke\\.",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test e2e/smoke-test-traceability.smoke.ts --workers=1",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "sanitize-filename": "^1.6.3",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/d3": "^7.4.3",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.14",
    "axios": "^1.11.0",
    "concurrently": "^9.2.1",
    "d3": "^7.9.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "lucide-react": "^0.542.0",
    "nodemon": "^3.0.1",
    "playwright-lighthouse": "^4.0.0",
    "postcss": "^8.4.27",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.5",
    "typescript": "^5.1.6",
    "vite": "^7.1.3",
    "wait-on": "^8.0.5",
    "zustand": "^5.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run typecheck'"
    ]
  }
}
